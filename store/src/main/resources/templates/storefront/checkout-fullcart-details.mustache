<div id="checkout-fullcart">
    <h2>Shopping Cart</h2>
    <p>You've picked {{cart.size}} items, for a total of ${{cart.total}}</p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-6">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th class="text-start">Product</th>
                            <th>Edition</th>
                            <th class="text-end">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#cart.items}}
                            <tr>
                                <td class="text-start">{{model}}</td>
                                <td>{{edition}}</td>
                                <td class="text-end">${{price}}</td>
                            </tr>
                        {{/cart.items}}
                        <tr class="border-top">
                            <td colspan="3" class="text-end">Total amount ${{cart.total}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="d-flex gap-3 justify-content-center">
        <button
            class="btn btn-outline-secondary"
            data-hx-get="/"
            data-hx-push-url="true"
            data-hx-trigger="click"
            data-hx-headers='{ "Accept": "text/html" }'
            type="button"
        >Continue shopping
        </button>
        <form class="checkout-start"
              data-hx-post="/checkout"
              data-hx-trigger="submit"
              data-hx-target="#store-content"
              data-hx-push-url="true"
        >
            <button class="btn btn-primary" type="submit">Checkout</button>
        </form>
    </div>
</div>
