{{> storefront/layout/header}}
<div
    id="product"
    data-hx-trigger="load delay:1s"
    data-hx-get="/products/{{productId}}"
    data-hx-vals='{ "edition": "{{edition}}" }'
    data-hx-headers='{ "Accept": "text/fragment+html" }'
>
    <div class="placeholder-glow">
        <div class="container text-center">
            <div class="row">
                <div class="col-6">
                    <div class="d-flex flex-column gap-2">
                        <h2>
                            <span class="placeholder col-7"></span>
                        </h2>
                        <div class="ratio ratio-1x1 bg-secondary placeholder" aria-hidden="true"></div>
                    </div>
                </div>
                <div class="col-3"></div>
                <div class="col-3"></div>
            </div>
        </div>
    </div>
</div>
<hr/>
<div
    id="checkout-minicart"
    data-hx-trigger="load delay:1s"
    data-hx-get="/cart"
    data-hx-headers='{ "Accept": "text/fragment+html" }'
>
    <div class="placeholder-glow">
        <div class="d-flex justify-content-center gap-3">
            <span class="placeholder col-3"></span>
            <a class="btn btn-danger btn-large disabled placeholder col-1" aria-disabled="true"></a>
            <a class="btn btn-info btn-large disabled placeholder col-1" aria-disabled="true"></a>
            <a class="btn btn-primary btn-large disabled placeholder col-1" aria-disabled="true"></a>
        </div>
    </div>
</div>
{{> storefront/layout/footer}}
