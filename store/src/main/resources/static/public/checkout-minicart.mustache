<div id="checkout-summary"
     data-hx-trigger="cart-updated from:body"
     data-hx-get="/cart"
     data-hx-headers='{ "Accept": "text/fragment+html" }'
     data-hx-swap-oob="true"
>
    <div class="checkout-minicart">
        {{#cart.isEmpty}}
            <p>Your cart is empty</p>
        {{/cart.isEmpty}}
        {{^cart.isEmpty}}
            <p>You've picked {{cart.size}} items, for a total of ${{cart.total}}</p>
            <form class="checkout-clear">
                <button
                    data-hx-delete="/cart"
                    data-hx-trigger="click"
                    type="button"
                >Empty cart</button>
            </form>
            <div class="checkout-review">
                <button
                    data-hx-get="/cart"
                    data-hx-trigger="click"
                    data-hx-push-url="true"
                    data-hx-headers='{ "Accept": "text/html" }'
                    type="button"
                >View cart</button>
            </div>
            <form class="checkout-start"
                  data-hx-post="/checkout"
                  data-hx-trigger="click"
                  data-hx-target="#store-content"
                  data-hx-push-url="true"
            >
                <button type="button">Checkout</button>
            </form>
        {{/cart.isEmpty}}
    </div>
</div>
