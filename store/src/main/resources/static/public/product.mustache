<div class="product">
    <div class="product_header">
        <h2 class="product_headline">{{details.model}}</h2>
        <img
            class="product_image"
            alt="The {{details.edition}} edition version of the {{details.model}} tractor"
            src="{{details.imageUrl}}"
        />
    </div>
    <div class="product_details">
        <label class="product_editions">
            <p>Material Upgrade?</p>
            <input
                data-hx-get="/products/{{details.productId}}"
                data-hx-vals='{ "edition": "{{details.otherEdition}}" }'
                data-hx-target=".product_container"
                {{#details.isPlatinum}}checked{{/details.isPlatinum}}
                type="checkbox"/>
            <span aria-label="Platinum Edition">Platinum<br/>Edition</span>
            <img class="product_image_platinum"
                 alt="Preview of the platinum edition version of the {{details.model}} tractor"
                 src="{{details.platinumImageUrl}}"/>
        </label>
        <div
            data-hx-get="/pricing/{{details.productId}}"
            data-hx-vals='{ "edition": "{{details.edition}}" }'
            data-hx-trigger="load"
            data-hx-target="this"></div>
    </div>
</div>
